{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "postinstall": "lerna bootstrap --hoist",
    "clean": "",
    "reset:npm": "reset:npm:packages && reset:npm:root",
    "reset:npm:packages": "lerna reset -y",
    "reset:npm:root": "rm -r node_modules",
    "reset:git": "git reset -fdx",
    "reset": "npm run reset:npm:packages && npm run reset:git"
  },
  "devDependencies": {
    "lerna": "^3.16.4",
    "npm-run-all": "4.1.5"
  }
}
